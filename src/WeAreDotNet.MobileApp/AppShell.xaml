<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WeAreDotNet.MobileApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:WeAreDotNet.MobileApp.Views"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <Tab Title="Home">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate views:MainPage}"
                Route="MainPage" />
        </Tab>

        <Tab Title="Creators">
            <ShellContent
                Title="Creators"
                ContentTemplate="{DataTemplate views:CreatorsPage}"
                Route="Creators" />
        </Tab>
    </TabBar>
</Shell>

