<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WeAreDotNet.MobileApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:WeAreDotNet.MobileApp.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Content" Icon="post.png">
            <ShellContent
                Title="Content"
                ContentTemplate="{DataTemplate views:MainPage}"
                Route="Content" />
        </Tab>

        <Tab Title="Community" Icon="account.png">
            <ShellContent
                Title="Community"
                ContentTemplate="{DataTemplate views:CreatorsPage}"
                Route="Community" />
        </Tab>
    </TabBar>
</Shell>

